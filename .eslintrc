{
  "extends": [
    "jibrelnetwork"
  ],
  "globals": {
    "__DEV__": false,
    "__PROD__": false,
    "__MAIN_RPC_ADDR__": false,
    "__MAIN_RPC_PORT__": false,
    "__ROPSTEN_RPC_ADDR__": false,
    "__ROPSTEN_RPC_PORT__": false,
    "i18n": false
  },
  "rules": {
    "padded-blocks": [2, "never"],
    "fp/no-mutation": [2, {
      "commonjs": true,
      "allowThis": true,
      "exceptions": [
        { "property": "onmessage" },
        { "property": "src" },
        { "property": "type" },
        { "property": "href" },
        { "property": "i18n" },
        { "property": "innerHTML" },
        { "property": "postMessage" },
        { "property": "defaultProps" },
        { "property": "asyncReducers" },
        { "property": "childContextTypes" },
        { "property": "captchaCallback" },
        { "property": "captchaErrorCallback" },
        { "property": "captchaExpiredCallback" }
      ]
    }],
    "fp/no-class": 0,
    "no-use-before-define": 0,
    "react/prefer-stateless-function": 0
  }
}
